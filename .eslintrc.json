{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "jsx": true
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "extends": "airbnb",
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi":[
      "error",
      "never"
    ],
    "no-restricted-syntax": "off",
    "no-plusplus": "off"
  }
}